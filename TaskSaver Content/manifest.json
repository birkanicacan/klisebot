{
  "manifest_version": 2,

  "name": "TaskSaver",
  "description": "This extension lets you to mark your pitched tasks so that it would be easier for you to remember while logging tasks",
  "version": "3.1",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "options_page": "options.html",
  "background": {
  		"page": "background.html"
  		},
  	
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "TaskSaver"
  },
  "permissions": [
	"https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.js",
	"storage",
	"tabs",
	"https://*/*"
  ]
}
